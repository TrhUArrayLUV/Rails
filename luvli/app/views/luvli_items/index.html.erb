<h1><%= @luv_list.title %></h1>

<table class="luvli_items">
  <thead>
    <tr>
      <th width="25%">Completed?</th>
      <th width="65%">Content</th>
      <th width="10%">Functions</th>
    </tr>
  </thead>
  <tbody>
  <% @luv_list.luvli_items.each do |luvli_item| %>
  <tr id = "<%= dom_id(luvli_item) %>" >
    <td>
      <% if luvli_item.completed? %>
        <%= luvli_item.completed_at %>
      <% else %>
        <%=link_to "mark complete", complete_luv_list_luvli_item_path(luvli_item), method: :patch %>
      <% end %>
    </td>
    <td><%= luvli_item.content %></td>
    <td>
      <%= link_to "edit", edit_luv_list_luvli_item_path(luvli_item) %>
      <%= link_to "delete", luv_list_luvli_item_path(luvli_item), method: :delete, data: { confirm: 'are you sure? you will not be able to recover it.' } %>

    </td>
  </tr>
  <% end %>
  </tbody>
</table>


<p>
  <%= link_to "new luvli", new_luv_list_luvli_item_path %>
</p>
